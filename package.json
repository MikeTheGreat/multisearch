{
    "name": "multisearch",
    "displayName": "Multisearch",
    "description": "Extending the 'F3' seach functionality to additional keys (F4, F5, etc)",
    "version": "1.0.5",
    "publisher": "MikePanitz",
    "repository": {
        "url": "https://github.com/MikeTheGreat/multisearch"
    },
    "license": "GPL-3.0-or-later",
    "engines": {
        "vscode": "^1.48.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:multisearch.loadPresetSearches",
        "onCommand:multisearch.doSearch"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "multisearch.loadPresetSearches",
                "title": "Load Preset Searches",
                "category": "MultiSearch",
                "when": "editorFocus"
            },
            {
                "command": "multisearch.doSearch",
                "title": "Search",
                "category": "MultiSearch",
                "when": "editorFocus"
            }
        ],
        "keybindings": [
            {
                "command": "multisearch.doSearch",
                "key": "f3",
                "args": {
                    "which": 0,
                    "direction": "forward"
                }
            },
            {
                "command": "multisearch.doSearch",
                "key": "Shift+f3",
                "args": {
                    "which": 0,
                    "direction": "backward"
                }
            },
            {
                "command": "multisearch.doSearch",
                "key": "Ctrl+f3",
                "args": {
                    "acquire": true,
                    "which": 0,
                    "direction": "forward"
                }
            },
            {
                "command": "multisearch.doSearch",
                "key": "Ctrl+Shift+f3",
                "args": {
                    "acquire": true,
                    "which": 0,
                    "direction": "backward"
                }
            }
        ],
        "configuration": {
            "title": "MultiSearch",
            "properties": {
                "multisearch.fileOfSearchStrings": {
                    "type": "string",
                    "default": "",
                    "description": "Full path to JSON file containing search strings to preload"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "yarn run compile && yarn run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.11.0",
        "@types/vscode": "^1.48.0",
        "@typescript-eslint/eslint-plugin": "^2.30.0",
        "@typescript-eslint/parser": "^2.30.0",
        "eslint": "^6.8.0",
        "glob": "^7.1.6",
        "mocha": "^7.1.2",
        "typescript": "^3.8.3",
        "vscode-test": "^1.3.0"
    }
}
